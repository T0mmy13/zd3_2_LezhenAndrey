<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="aquamarine">#7FFFD4</color>
    <color name="black">#FF000000</color>
    <color name="blue">#0000FF</color>
    <color name="grey_light">#EEEEEE</color>
    <color name="hint">#666666</color>
    <color name="hint2">#2C2C2C</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">TV2</string>
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EditTextBackgroundStyle">
        <item name="android:background">@drawable/edit_text_background</item>
    </style>
    <style name="EditTextStyle">
        <item name="colorControlActivated">@color/aquamarine</item>
        <item name="colorControlNormal">@color/hint</item>
    </style>
    <style name="Theme.MyTVApp" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>